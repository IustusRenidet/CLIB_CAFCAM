{
  "name": "clib_cafcam",
  "version": "2.0.2",
  "description": "Campos libres de docs de ventas para CAF-CAM",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/IustusRenidet/CLIB_CAFCAM.git"
  },
  "author": "Rintel Gatachi <iustusrenidet@gmail.com>",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --win",
    "web": "node server.js",
    "release:patch": "npm version patch -m \"release: v%s\"",
    "release:minor": "npm version minor -m \"release: v%s\"",
    "release:major": "npm version major -m \"release: v%s\"",
    "release:push": "git push && git push --follow-tags",
    "release:patch:publish": "npm run release:patch && npm run release:push && npm run publish:github",
    "release:minor:publish": "npm run release:minor && npm run release:push && npm run publish:github",
    "release:major:publish": "npm run release:major && npm run release:push && npm run publish:github",
    "publish:local": "npm run dist",
    "publish:github": "electron-builder --win --publish always",
    "publish": "npm run publish:github"
  },
  "dependencies": {
    "bootstrap": "^5.3.3",
    "node-firebird": "^0.8.9",
    "tom-select": "^2.3.1",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "electron": "^38.2.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "asar": true,
    "asarUnpack": [
      "**/*.node"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "IustusRenidet",
        "repo": "CLIB_CAFCAM",
        "releaseType": "release"
      }
    ],
    "appId": "com.iconet.clib_cafcam",
    "productName": "CLIB CAF-CAM",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "icon": "icono/icono.ico",
      "signingHashAlgorithms": [],
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-x64.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName}-${version}-setup.${ext}"
    }
  }
}
